{
  "compilerOptions": {
    "target": "ES2017",
    // "module": "commonjs",
    "module": "ES2015",
    "moduleResolution": "Node",
    "lib": [
      "es2015",
      "dom"
    ],
    // "typeRoots": [ "./types", "./node_modules/@types"],
    "outDir": "dist",
    "sourceMap": false,
    "allowJs": false,
    "strictNullChecks": true,
    "strict": true,
    "declaration": true,
    //"noUnusedParameters": true,    
    // "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "package.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
